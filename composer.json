{
    "name": "kissplugins/kiss-woo-order-monitoring-alerts",
    "description": "WordPress plugin for monitoring WooCommerce order volume and sending alerts",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "KISS Plugins",
            "homepage": "https://github.com/kissplugins"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.13"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,.git/ .",
        "phpmd": "phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor/,node_modules/,.git/",
        "lint": [
            "@phpcs",
            "@phpmd"
        ]
    }
}
